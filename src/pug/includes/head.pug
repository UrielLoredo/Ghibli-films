head( lang="es", xml:lang="es")
	title #{title}
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
	meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

	//Metatags
	meta(name="Description", content=desc)
	meta(name="Keywords", content=keyword)
	
	
	// Apple metatags
	meta(name='apple-mobile-web-app-capable', content="yes")
	meta(name='apple-mobile-web-app-status-bar-style', content="black-translucent")
	
	// Favicon
	link(rel="shorcut icon", href=location + "css/img/favicon.ico")
	link(rel="shorcut icon", href=location + "css/img/favicon.png")
	link(rel="apple-touch-icon", href=location + "css/img/icon-touch.png")
	link(rel="apple-touch-icon", sizes="72x72", href=location + "css/img/icon-touch-72.png")
	link(rel="apple-touch-icon", sizes="114x114", href=location + "css/img/icon-touch-114.png")
	link(rel="apple-touch-icon", sizes="144x144", href=location + "css/img/icon-touch-144.png")
	
	// Styles
	//-Import Google Icon Font
	link(rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons")
	link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,600")
	link(rel="stylesheet", href=location + "css/styles.css", type="text/css")